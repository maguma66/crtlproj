<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vistas01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    android:orientation="vertical"
    android:stretchColumns="6" >

	<TableRow android:layout_width="wrap_content" >
		
<TextView 
	android:id="@+id/vista02" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:textSize="20dip" 
	android:text="TAREA:" 
	android:textColor="#FFFFFF">
</TextView>
	


<Spinner 
	android:id="@+id/vista03" 
	android:layout_height="wrap_content" 
	android:layout_width="wrap_content">
</Spinner>
<TextView 
	android:id="@+id/vista04" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="TOTAL:" android:textColor="#ffffff">
</TextView>
<TextView 
	android:id="@+id/vista05" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="0" 
	android:textSize="20dip" android:textColor="#ffffff">
</TextView>










</TableRow>	

<HorizontalScrollView
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>

<ScrollView 
	android:id="@+id/ScrollView01" 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent">

	<TableLayout
	    android:id="@+id/vistas08"
	    android:layout_width="1200px"
	    android:layout_height="480px"
	    android:stretchColumns="1" >

		<TableRow 
			android:id="@+id/TableRow01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">

			<TextView
			    android:id="@+id/vistas09"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="#50000000"
			    android:gravity="center"
			    android:minWidth="75dip"
			    android:text="fecha"
			    android:textColorHint="#ffffff"
			    android:textColorLink="#ffffff" >

			</TextView>
			
			<TextView 
				android:layout_width="match_parent" 
				android:layout_height="wrap_content" 
				android:gravity="center" 
				android:text="concepto" 
				android:id="@+id/vistas10" 
				android:background="#80000000">
			</TextView>

			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:gravity="center" 
				android:text="cant." 
				android:id="@+id/vistas11" 
				android:background="#50000000" 
				android:minWidth="75dip">
			</TextView>

			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:gravity="center" 
				android:text="precio" 
				android:id="@+id/vistas12" 
				android:background="#80000000" 
				android:minWidth="50dip">
			</TextView>
			
			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:gravity="center" 
				android:text="total" 
				android:id="@+id/vistas13" 
				android:background="#50000000" 
				android:minWidth="50dip">
			</TextView>
		</TableRow>
		
		<TableRow 
			android:id="@+id/TableRow02" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
			
			<TextView 
				android:layout_width="match_parent" 
				android:layout_height="match_parent" 
				android:gravity="right" 
				android:id="@+id/vistas15" 
				android:background="#50000000" 
				android:layout_margin="1dip">
			</TextView>
			
			<TextView 
				android:layout_width="match_parent" 
				android:layout_height="match_parent" 
				android:id="@+id/vistas16" 
				android:background="#80000000" 
				android:layout_margin="1dip">
			</TextView>
			
			<TextView 
				android:layout_width="match_parent" 
				android:layout_height="match_parent" 
				android:gravity="top|center" 
				android:id="@+id/vistas17" 
				android:background="#50000000" 
				android:layout_margin="1dip">
			</TextView>
			
			<TextView 
				android:layout_width="match_parent" 
				android:layout_height="match_parent" 
				android:gravity="top|center" 
				android:id="@+id/vistas18" 
				android:background="#80000000" 
				android:layout_margin="1dip">
			</TextView>

			<TextView 
				android:layout_width="match_parent" 
				android:layout_height="match_parent" 
				android:gravity="top|center" 
				android:id="@+id/vistas19" 
				android:background="#50000000" 
				android:layout_margin="1dip">
			</TextView>
		</TableRow>
	</TableLayout>
</ScrollView>
</HorizontalScrollView>




</TableLayout>


